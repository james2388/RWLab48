<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:tools="http://schemas.android.com/tools"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:paddingBottom="@dimen/activity_vertical_margin"
				android:paddingLeft="@dimen/activity_horizontal_margin"
				android:paddingRight="@dimen/activity_horizontal_margin"
				android:paddingTop="@dimen/activity_vertical_margin"
				tools:context=".MainActivity">
	<Button
		android:id="@+id/gallery_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:onClick="onClick"
		android:text="@string/button_gallery_app"/>
	<Button
		android:id="@+id/web_browser_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/gallery_button"
		android:layout_marginEnd="20dp"
		android:layout_marginRight="20dp"
		android:onClick="onClick"
		android:text="@string/button_web_browser"/>
	<Button
		android:id="@+id/map_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/web_browser_button"
		android:onClick="onClick"
		android:text="@string/button_map"/>

	<Button
		android:id="@+id/gallery_image_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/map_button"
		android:onClick="onClick"
		android:text="@string/button_gallery_image"/>
	<Button
		android:id="@+id/camera_photo_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toEndOf="@+id/web_browser_button"
		android:layout_toRightOf="@+id/web_browser_button"
		android:onClick="onClick"
		android:text="@string/button_make_photo"/>
	<Button
		android:id="@+id/camera_video_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/camera_photo_button"
		android:layout_toEndOf="@+id/web_browser_button"
		android:layout_toRightOf="@+id/web_browser_button"
		android:onClick="onClick"
		android:text="@string/button_record_video"/>
	<Button
		android:id="@+id/dictaphone_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/camera_video_button"
		android:layout_toEndOf="@+id/web_browser_button"
		android:layout_toRightOf="@+id/web_browser_button"
		android:onClick="onClick"
		android:text="@string/button_voice_recording"/>
</RelativeLayout>
